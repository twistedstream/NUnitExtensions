<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Run all unit tests --> 
  <Target Name="RunUnitTest">
    <ItemGroup>
        <UnitTest_TestAssemblies Include="$(Input_SourceDirPath)\**\bin\$(BuildConfiguration)\*.UnitTest.dll" />
    </ItemGroup>
    
    <NUnit ToolPath="$(Input_NUnitToolDirPath)" 
           DisableShadowCopy="true" 
           Assemblies="@(UnitTest_TestAssemblies)" 
           OutputXmlFile="$(Build_OutputDirPath)\TestResult.xml" />
  </Target>
</Project>