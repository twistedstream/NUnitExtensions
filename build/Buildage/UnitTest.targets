<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="RunUnitTest">
    <CreateItem Include="$(Input_SourceDirPath)\**\bin\$(BuildConfiguration)\*.UnitTest.dll">
      <Output TaskParameter="Include" ItemName="UnitTest_TestAssemblies" />
    </CreateItem>

    <NUnit ToolPath="$(Input_NUnitToolDirPath)" 
           DisableShadowCopy="true" 
           Assemblies="@(UnitTest_TestAssemblies)" 
           OutputXmlFile="$(BuildOutputPath)\TestResult.xml" />
  </Target>
</Project>